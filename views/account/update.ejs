<h1><%= title %></h1>

<% if (messages && messages.length > 0) { %>
<div class="flash-message success">
  <% messages.forEach(msg => { %>
    <p><%= msg %></p>
  <% }) %>
</div>
<% } %>

<% if (errors && errors.length > 0) { %>
<div class="flash-message error">
  <% errors.forEach(err => { %>
    <p><%= err %></p>
  <% }) %>
</div>
<% } %>

<!-- Account Update Form -->
<section class="login-card">
<h2>Account Update</h2>
<form class="login-form" action="/account/update-info" method="POST">
  <input type="hidden" name="account_id" value="<%= account.account_id %>">

  <label for="account_firstname">First Name:</label>
  <input type="text" id="account_firstname" name="account_firstname" value="<%= account.account_firstname %>" required>

  <label for="account_lastname">Last Name:</label>
  <input type="text" id="account_lastname" name="account_lastname" value="<%= account.account_lastname %>" required>

  <label for="account_email">Email:</label>
  <input type="email" id="account_email" name="account_email" value="<%= account.account_email %>" required>

  <div class="form-actions">
    <button type="submit">Update Account</button>
  </div>
</form>
</section>

<!-- Password Update Form -->
<section class="login-card">
<h2>Change Password</h2>
<form class="login-form" action="/account/update-password" method="POST">
  <input type="hidden" name="account_id" value="<%= account.account_id %>">

  <label for="account_password">New Password:</label>
  <input type="password" id="account_password" name="account_password" placeholder="Enter new password" required>
  <small class="password-note">Password must be at least 12 characters and include 1 capital, 1 number, and 1 special character.</small>

  <div class="form-actions">
    <button type="submit">Update Password</button>
  </div>
</form>
</section>