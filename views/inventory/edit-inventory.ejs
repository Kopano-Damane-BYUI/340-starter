<h1><%= title %></h1>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(function(msg) { %>
      <li><%= msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="inventory-card">
  <form method="post" action="/inv/update" class="edit-inventory-form">
    <!-- Hidden input to store the inventory ID -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <label for="classificationSelect">Classification:</label>
    <div><%- classificationSelect %></div>

    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>">

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>">

    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>

    <label for="inv_image">Image path (optional):</label>
    <input type="text" id="inv_image" name="inv_image" value="<%= inv_image %>">

    <label for="inv_thumbnail">Thumbnail path (optional):</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail %>">

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" step="0.01" min="0" required value="<%= inv_price %>">

    <label for="inv_year">Year (4 digits):</label>
    <input type="number" id="inv_year" name="inv_year" required value="<%= inv_year %>">

    <label for="inv_miles">Mileage:</label>
    <input type="number" id="inv_miles" name="inv_miles" step="1" min="0" required value="<%= inv_miles %>">

    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" required value="<%= inv_color %>">

    <div class="form-actions">
      <button type="submit">Update Vehicle</button>
    </div>
  </form>
</div>
<script src="/js/inv-update.js"></script>